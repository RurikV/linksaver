{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@cms/*": ["../cms-core/dist/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "../cms-core/types"]
  },
  "include": [
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../cms-core/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
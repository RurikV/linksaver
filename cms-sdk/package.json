{
  "name": "cms-sdk",
  "version": "0.1.0",
  "description": "Shared SDK for plugin-based CMS (IoC, DSL validation, plugin registry, renderers)",
  "main": "src/index.js",
  "license": "ISC",
  "scripts": {
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "lodash": "^4.17.21"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
